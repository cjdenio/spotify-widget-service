model User {
  id                  Int     @id @default(autoincrement())
  email               String  @unique
  spotifyToken        String
  spotifyRefreshToken String
  tokens              Token[]
}

model Token {
  id     Int    @id @default(autoincrement())
  token  String @unique
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}
